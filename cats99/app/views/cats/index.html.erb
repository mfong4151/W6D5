<h1>All Cats!</h1>

<h3>Here's all of our cats!</h3>
    <%@cats.each do |cat|%>
    <table>
        <thead>
            <tr>
                <th colspan="2"><%= cat.name%></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Birth Date</td>
                <td><%= cat.birth_date%></td>
            </tr>
            <tr>
                <td>Sex</td>
                <td><%= cat.sex%></td>
            </tr>
            <tr>
                <td>Color</td>
                <td><%= cat.color%></td>
            </tr>
            <tr>
                <td>Description</td>
                <td><%= cat.description%></td>
            </tr>
        </tbody>
    </table>

    <% end %>