<h1>Submit your cat here!</h1>
<form action=<%=cats_url%> method="post">
    <label for="name">Name</label>
    <input id="name" type="text" name="cat[name]">

    <br>

    <label for="birth_date">Birth Date</label>
    <input id="birth_date" type="date" name="cat[birth_date]">

    <br>

    <label for="sex">Sex</label>
    <input id="sex" type="radio" name="cat[sex]" value="M">
    <label for="M">M</label><br>
    <input id="sex" type="radio" name="cat[sex]" value="F">
    <label for="F">F</label><br>

    <br>

    <label for="color">Color</label>
    <select id="color" name="cat[color]">
        <option disabled selected>Select a color</option>
        <option value='White'>White</option>
        <option value="Black">Black</option>
        <option value="Red">Red</option>
        <option value="Blue">Blue</option>
        <option value="Grey">Grey</option>
        <option value="Cream">Cream</option>
        <option value="Brown">Brown</option>
        <option value="Cinnamon">Cinnamon</option>
        <option value="Fawn">Fawn</option>
    </select>

    <br><br>

    <label for="description">Description</label>
    <textarea id="description" name="cat[description]"></textarea>

    <input type="submit" value="Submit">
</form>


